<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("admin.user.manage"), admin_users_path %></li>
            <li><%= link_to t("admin.subject.manage"), admin_subjects_path %></li>
            <li><%= link_to t("admin.exam.manage"), admin_exams_path %></li>
            <li><%= link_to t("questions.manage"), admin_questions_path %></li>
          <% else %>
            <li><%= link_to t("questions.show"), user_questions_path(current_user) %></li>
          <% end %></li>
          <% if current_user.user? %>
            <li><%= link_to t("subject.name"), subjects_path %></li>
            <li><%= link_to t("exam.name"), exams_path %></li>
          <% end %>
          <li>
            <%= link_to t("layouts.header.profile"),
              edit_user_registration_path(current_user) %>
          </li>
          <li>
            <%= link_to t(".log_out"),
              destroy_user_session_path, method: "delete" %>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), new_user_session_path %></li>
          <li><%= link_to t(".sign_up"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
